# Shared runtime source of truth
SHARED_DIR_PATH=../shared
GIWA_CHAIN_ID=91342

# Kafka source (chain.logs.raw)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=chain.logs.raw
KAFKA_GROUP_ID=rwa-flink-indexer
KAFKA_SECURITY_PROTOCOL=
KAFKA_SASL_MECHANISM=
KAFKA_SASL_JAAS_CONFIG=
KAFKA_CLIENT_DNS_LOOKUP=

# Postgres sink (read model DB)
DB_URL=jdbc:postgresql://localhost:5432/rwa
DB_USER=rwa
DB_PASSWORD=rwa_password
DB_SCHEMA=public

# Flink runtime
FLINK_CHECKPOINT_INTERVAL_MS=10000
FLINK_PARALLELISM=1
SINK_PARALLELISM=1

# Optional filtering mode: ALL | KNOWN_WALLETS | APPROVED_WALLETS
FILTER_MODE=ALL
