# Server runtime
SERVER_PORT=8080

# Database
DB_URL=jdbc:postgresql://localhost:5432/rwa
DB_USER=rwa
DB_PASSWORD=rwa_password

# Shared assets and chain
SHARED_DIR_PATH=../shared
GIWA_RPC_URL=https://sepolia-rpc.giwa.io
GIWA_CHAIN_ID=91342
TX_CONFIRMATIONS=12
TX_POLLING_INTERVAL_MS=5000
TX_DEFAULT_GAS_LIMIT=800000
NONCE_LOCK_TIMEOUT_MS=5000

# Security
ADMIN_API_TOKEN=change-me
MASTER_KEY_BASE64=replace-with-base64-aes-key
ISSUER_PRIVATE_KEY=0x
TREASURY_PRIVATE_KEY=0x

# Kafka / Outbox
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
OUTBOX_KAFKA_ENABLED=true
OUTBOX_DEFAULT_TOPIC=server.domain.events
OUTBOX_RETRY_MIN_AGE_MINUTES=10
OUTBOX_MAX_ATTEMPTS=30
OUTBOX_RETRY_INTERVAL_MS=60000
OUTBOX_LOCK_TTL_SECONDS=300
OUTBOX_CLAIM_BATCH_SIZE=100
OUTBOX_BACKOFF_SECONDS=60
OUTBOX_PUBLISHER_CORE_POOL_SIZE=4
OUTBOX_PUBLISHER_MAX_POOL_SIZE=8
OUTBOX_PUBLISHER_QUEUE_CAPACITY=200
