{
  "name": "rwa-contracts",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "export:abi": "hardhat run scripts/export-abi.ts",
    "deploy:giwa": "hardhat ignition deploy ignition/modules/RwaModule.ts --network giwaSepolia",
    "export:deployment:giwa": "hardhat run scripts/export-deployment.ts --network giwaSepolia",
    "bootstrap:giwa": "hardhat run scripts/bootstrap-giwa.ts --network giwaSepolia",
    "verify:giwa": "hardhat run scripts/verify-giwa.ts --network giwaSepolia",
    "deploy:all:giwa": "npm run deploy:giwa && npm run export:deployment:giwa && npm run bootstrap:giwa"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.2.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^4.0.4",
    "@nomicfoundation/hardhat-ethers-chai-matchers": "^3.0.2",
    "@nomicfoundation/hardhat-ignition": "^3.0.7",
    "@nomicfoundation/hardhat-ignition-ethers": "^3.0.7",
    "@nomicfoundation/hardhat-mocha": "^3.0.9",
    "@nomicfoundation/hardhat-verify": "^3.0.10",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.5",
    "dotenv": "^16.4.7",
    "hardhat": "^3.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
