# Copy this file to `.env` and fill real values for local use.
# `.env.example` is safe to commit. `.env` must stay local-only.

# Deployer private key used by Hardhat for `--network giwaSepolia`.
# Must include 0x prefix.
PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# GIWA Sepolia RPC endpoint.
GIWA_SEPOLIA_RPC_URL=https://sepolia-rpc.giwa.io

# GIWA Sepolia chain id.
GIWA_SEPOLIA_CHAIN_ID=91342

# Blockscout verification settings.
# API key is typically not required for many Blockscout instances.
GIWA_BLOCKSCOUT_API_KEY=api-key-not-required
GIWA_BLOCKSCOUT_API_URL=https://sepolia-explorer.giwa.io/api
GIWA_BLOCKSCOUT_BROWSER_URL=https://sepolia-explorer.giwa.io

# Bootstrap addresses used after deploy.
# ISSUER_ADDRESS receives ownership of KYCRegistry, MockUSD, and PropertyTokenizer.
# TREASURY_ADDRESS is allowlisted and used as treasury recipient in minting flows.
ISSUER_ADDRESS=0x1111111111111111111111111111111111111111
TREASURY_ADDRESS=0x2222222222222222222222222222222222222222

# Optional metadata base URI for PropertyShare1155 constructor and verification script.
PROPERTY_SHARE_BASE_URI=ipfs://rwa/property-share
