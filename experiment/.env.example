# Load profile
EXPERIMENT_LOAD_MODE=synthetic
EXPERIMENT_RATE_PER_SEC=1000
EXPERIMENT_DURATION_SEC=120
EXPERIMENT_TOTAL_MESSAGES=0

# Fault injection
