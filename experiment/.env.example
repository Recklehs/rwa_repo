# Experiment defaults
EXPERIMENT_COMPOSE_FILE=/Users/kanghyoseung/Desktop/project/rwa/infra/docker-compose.yml
EXPERIMENT_DB_USER=rwa
EXPERIMENT_DB_NAME=rwa

# Kafka
EXPERIMENT_KAFKA_BOOTSTRAP=kafka:9092
EXPERIMENT_KAFKA_RAW_TOPIC=chain.logs.raw
EXPERIMENT_KAFKA_DLQ_TOPIC=chain.logs.dlq
EXPERIMENT_KAFKA_GROUP=rwa-flink-indexer

# Flink REST
