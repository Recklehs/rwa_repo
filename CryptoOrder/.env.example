# Spring server
SERVER_PORT=8080

# PostgreSQL
DB_URL=jdbc:postgresql://localhost:5432/cryptoorder
DB_USERNAME=cryptoorder
DB_PASSWORD=cryptoorder
DB_SCHEMA=public
JPA_DDL_AUTO=update
HIBERNATE_SHOW_SQL=false
HIBERNATE_FORMAT_SQL=false

# Auth server
AUTH_MODE=JWKS
AUTH_JWT_ISSUER=rwa-id-server
AUTH_JWT_AUDIENCE=rwa-custody
AUTH_ACCESS_TOKEN_TTL_SECONDS=900
AUTH_REFRESH_TOKEN_TTL_SECONDS=1209600
AUTH_JWT_KEY_ID=member-server-key-1
# Option A) DER base64 values
AUTH_JWT_PRIVATE_KEY_BASE64=
AUTH_JWT_PUBLIC_KEY_BASE64=
# Option B) PEM file paths (recommended for local, relative path allowed)
# JWKS mode requires both private/public to be set as a pair.
AUTH_JWT_PRIVATE_KEY_PATH=
AUTH_JWT_PUBLIC_KEY_PATH=
AUTH_HMAC_SECRET_BASE64=
# Local only. Set false in production and provide fixed keys.
AUTH_ALLOW_EPHEMERAL_KEYS=true

# Custody provisioning
CUSTODY_PROVISION_ENABLED=false
CUSTODY_BASE_URL=http://localhost:8080
CUSTODY_PROVISION_PATH=/internal/wallets/provision
SERVICE_TOKEN=
SERVICE_TOKEN_HEADER=X-Service-Token
CUSTODY_CONNECT_TIMEOUT_MILLIS=2000
CUSTODY_READ_TIMEOUT_MILLIS=5000

# Idempotency
IDEMPOTENCY_IN_PROGRESS_TTL_SECONDS=120
IDEMPOTENCY_RESPONSE_ENCRYPTION_KEY_BASE64=
# Local only. Set false in production and provide fixed key.
IDEMPOTENCY_ALLOW_EPHEMERAL_ENCRYPTION_KEY=true
